.app {
  background: #fff;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
}
.menus {
  margin: 0 auto;
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.menu {
  display: block;
  color: #000;
  background-color: #fff;
  border: 1px solid #000;
  height: 100rpx;
  font-size: 32rpx;
  line-height: 100rpx;
  padding-left: 48rpx;
  padding-right: 48rpx;
  border-radius: 18rpx;
  text-decoration: none;
  margin: 40rpx;
  text-align: center;
}
